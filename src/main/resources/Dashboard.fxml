<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.oscars.vehiclemaintenancesystem.controller.DashboardController">
    <left>
        <VBox fx:id="sidebar" spacing="10" style="-fx-background-color: #2c3e50; -fx-padding: 10;" minWidth="200">
            <!-- Buttons will be added dynamically in the controller -->
        </VBox>
    </left>
    <center>
        <VBox spacing="10" style="-fx-padding: 20; -fx-background-color: #ecf0f1;" alignment="TOP_CENTER" VBox.vgrow="ALWAYS">
            <Label fx:id="welcomeLabel" style="-fx-font-size: 20; -fx-text-fill: #2c3e50;"/>
            <Label fx:id="totalCustomersLabel" style="-fx-font-size: 16; -fx-text-fill: #2c3e50;"/>
            <Label fx:id="totalVehiclesLabel" style="-fx-font-size: 16; -fx-text-fill: #2c3e50;"/>
            <Label fx:id="totalAppointmentsLabel" style="-fx-font-size: 16; -fx-text-fill: #2c3e50;"/>
            <Label fx:id="totalRevenueLabel" style="-fx-font-size: 16; -fx-text-fill: #2c3e50;"/>
        </VBox>
    </center>
</BorderPane>