<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.oscars.vehiclemaintenancesystem.controller.ServiceCategoryManagementController">
    <left>
        <VBox fx:id="sidebar" spacing="10" style="-fx-background-color: #2c3e50; -fx-padding: 10;" minWidth="200">
            <!-- Buttons will be added dynamically in the controller -->
        </VBox>
    </left>
    <center>
        <VBox spacing="10" style="-fx-padding: 20; -fx-background-color: #ecf0f1;">
            <Label text="ðŸ“‹ Service Category Management" style="-fx-font-size: 20; -fx-text-fill: #2c3e50;"/>
            <GridPane hgap="10" vgap="10">
                <Label text="Category Name:" GridPane.rowIndex="0" GridPane.columnIndex="0" style="-fx-font-size: 14; -fx-text-fill: #2c3e50;"/>
                <TextField fx:id="categoryNameField" GridPane.rowIndex="0" GridPane.columnIndex="1" style="-fx-pref-width: 200;"/>
                <Label text="Description:" GridPane.rowIndex="1" GridPane.columnIndex="0" style="-fx-font-size: 14; -fx-text-fill: #2c3e50;"/>
                <TextField fx:id="descriptionField" GridPane.rowIndex="1" GridPane.columnIndex="1" style="-fx-pref-width: 200;"/>
            </GridPane>
            <HBox spacing="10">
                <Button text="âž• Add Category" onAction="#addServiceCategory" style="-fx-background-color: #1abc9c; -fx-text-fill: white; -fx-font-size: 14;"/>
                <Button text="ðŸ—‘ï¸ Delete Category" onAction="#deleteServiceCategory" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-size: 14;"/>
            </HBox>
            <TableView fx:id="categoryTable" style="-fx-pref-height: 300;">
                <columns>
                    <TableColumn text="Category ID" fx:id="categoryIdColumn" style="-fx-alignment: CENTER;"/>
                    <TableColumn text="Category Name" fx:id="categoryNameColumn" style="-fx-alignment: CENTER;"/>
                    <TableColumn text="Description" fx:id="descriptionColumn" style="-fx-alignment: CENTER;"/>
                </columns>
            </TableView>
        </VBox>
    </center>
</BorderPane>