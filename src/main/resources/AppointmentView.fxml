<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.oscars.vehiclemaintenancesystem.controller.AppointmentController">
    <left>
        <VBox fx:id="sidebar" spacing="10" style="-fx-background-color: #2c3e50; -fx-padding: 10;" minWidth="200">
            <!-- Buttons will be added dynamically in the controller -->
        </VBox>
    </left>
    <center>
        <VBox spacing="10" style="-fx-padding: 20; -fx-background-color: #ecf0f1;">
            <Label text="📅 Manage Appointments" style="-fx-font-size: 20; -fx-text-fill: #2c3e50;"/>
            <GridPane hgap="10" vgap="10">
                <Label text="Vehicle ID:" GridPane.rowIndex="0" GridPane.columnIndex="0" style="-fx-font-size: 14; -fx-text-fill: #2c3e50;"/>
                <TextField fx:id="vehicleIdField" GridPane.rowIndex="0" GridPane.columnIndex="1" style="-fx-pref-width: 200;"/>
                <Label text="Service ID:" GridPane.rowIndex="1" GridPane.columnIndex="0" style="-fx-font-size: 14; -fx-text-fill: #2c3e50;"/>
                <TextField fx:id="serviceIdField" GridPane.rowIndex="1" GridPane.columnIndex="1" style="-fx-pref-width: 200;" promptText="Optional if Package ID is provided"/>
                <Label text="Package ID:" GridPane.rowIndex="2" GridPane.columnIndex="0" style="-fx-font-size: 14; -fx-text-fill: #2c3e50;"/>
                <TextField fx:id="packageIdField" GridPane.rowIndex="2" GridPane.columnIndex="1" style="-fx-pref-width: 200;" promptText="Optional if Service ID is provided"/>
                <Label text="Mechanic ID:" GridPane.rowIndex="3" GridPane.columnIndex="0" style="-fx-font-size: 14; -fx-text-fill: #2c3e50;"/>
                <TextField fx:id="mechanicIdField" GridPane.rowIndex="3" GridPane.columnIndex="1" style="-fx-pref-width: 200;"/>
                <Label text="Appointment Date:" GridPane.rowIndex="4" GridPane.columnIndex="0" style="-fx-font-size: 14; -fx-text-fill: #2c3e50;"/>
                <DatePicker fx:id="appointmentDatePicker" GridPane.rowIndex="4" GridPane.columnIndex="1" style="-fx-pref-width: 200;"/>
                <Label text="Notes:" GridPane.rowIndex="5" GridPane.columnIndex="0" style="-fx-font-size: 14; -fx-text-fill: #2c3e50;"/>
                <TextField fx:id="notesField" GridPane.rowIndex="5" GridPane.columnIndex="1" style="-fx-pref-width: 200;"/>
            </GridPane>
            <HBox spacing="10">
                <Button text="📅 Schedule Appointment" onAction="#scheduleAppointment" style="-fx-background-color: #1abc9c; -fx-text-fill: white; -fx-font-size: 14;"/>
                <Button text="❌ Cancel Appointment" onAction="#cancelAppointment" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-size: 14;"/>
            </HBox>
            <TableView fx:id="appointmentTable" style="-fx-pref-height: 300;">
                <columns>
                    <TableColumn text="Appointment ID" fx:id="appointmentIdColumn" style="-fx-alignment: CENTER;"/>
                    <TableColumn text="Vehicle ID" fx:id="vehicleIdColumn" style="-fx-alignment: CENTER;"/>
                    <TableColumn text="Service ID" fx:id="serviceIdColumn" style="-fx-alignment: CENTER;"/>
                    <TableColumn text="Package ID" fx:id="packageIdColumn" style="-fx-alignment: CENTER;"/>
                    <TableColumn text="Mechanic ID" fx:id="mechanicIdColumn" style="-fx-alignment: CENTER;"/>
                    <TableColumn text="Appointment Date" fx:id="appointmentDateColumn" style="-fx-alignment: CENTER;"/>
                    <TableColumn text="Status" fx:id="statusColumn" style="-fx-alignment: CENTER;"/>
                    <TableColumn text="Notes" fx:id="notesColumn" style="-fx-alignment: CENTER;"/>
                </columns>
            </TableView>
        </VBox>
    </center>
</BorderPane>