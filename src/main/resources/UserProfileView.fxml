<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.oscars.vehiclemaintenancesystem.controller.UserProfileController">
    <left>
        <VBox spacing="10" style="-fx-background-color: #2c3e50; -fx-padding: 10;">
            <Button text="🏠 Dashboard" onAction="#showDashboard" style="-fx-pref-width: 150; -fx-background-color: #34495e; -fx-text-fill: white; -fx-font-size: 14;"/>
            <!-- Admin Menu -->
            <Button text="👥 Customers" onAction="#showCustomerView" style="-fx-pref-width: 150; -fx-background-color: #34495e; -fx-text-fill: white; -fx-font-size: 14;"/>
            <Button text="🚗 Vehicles" onAction="#showVehicleView" style="-fx-pref-width: 150; -fx-background-color: #34495e; -fx-text-fill: white; -fx-font-size: 14;"/>
            <Button text="📅 Appointments" onAction="#showAppointmentView" style="-fx-pref-width: 150; -fx-background-color: #34495e; -fx-text-fill: white; -fx-font-size: 14;"/>
            <Button text="💳 Payments" onAction="#showPaymentView" style="-fx-pref-width: 150; -fx-background-color: #34495e; -fx-text-fill: white; -fx-font-size: 14;"/>
            <Button text="📦 Inventory" onAction="#showInventoryView" style="-fx-pref-width: 150; -fx-background-color: #34495e; -fx-text-fill: white; -fx-font-size: 14;"/>
            <Button text="👤 Users" onAction="#showUserView" style="-fx-pref-width: 150; -fx-background-color: #34495e; -fx-text-fill: white; -fx-font-size: 14;"/>
            <Button text="🔔 Notifications" onAction="#showNotificationView" style="-fx-pref-width: 150; -fx-background-color: #34495e; -fx-text-fill: white; -fx-font-size: 14;"/>
            <Button text="⚙️ Services" onAction="#showServiceManagementView" style="-fx-pref-width: 150; -fx-background-color: #34495e; -fx-text-fill: white; -fx-font-size: 14;"/>
            <Button text="📦 Packages" onAction="#showServicePackageManagementView" style="-fx-pref-width: 150; -fx-background-color: #34495e; -fx-text-fill: white; -fx-font-size: 14;"/>
            <Button text="🔧 Mechanic Availability" onAction="#showMechanicAvailabilityView" style="-fx-pref-width: 150; -fx-background-color: #34495e; -fx-text-fill: white; -fx-font-size: 14;"/>
            <Button text="📝 Feedback" onAction="#showCustomerFeedbackView" style="-fx-pref-width: 150; -fx-background-color: #34495e; -fx-text-fill: white; -fx-font-size: 14;"/>
            <Button text="🔔 Manage Notifications" onAction="#showNotificationManagementView" style="-fx-pref-width: 150; -fx-background-color: #34495e; -fx-text-fill: white; -fx-font-size: 14;"/>
            <Button text="📄 Invoice Generation" onAction="#showInvoiceGenerationView" style="-fx-pref-width: 150; -fx-background-color: #34495e; -fx-text-fill: white; -fx-font-size: 14;"/>
            <Button text="📋 Vehicle Checklist" onAction="#showVehicleChecklistView" style="-fx-pref-width: 150; -fx-background-color: #34495e; -fx-text-fill: white; -fx-font-size: 14;"/>
            <Button text="📋 Service Categories" onAction="#showServiceCategoryManagementView" style="-fx-pref-width: 150; -fx-background-color: #34495e; -fx-text-fill: white; -fx-font-size: 14;"/>
            <Button text="📜 User Activity Log" onAction="#showUserActivityLogView" style="-fx-pref-width: 150; -fx-background-color: #34495e; -fx-text-fill: white; -fx-font-size: 14;"/>
            <Button text="⚙️ System Settings" onAction="#showSystemSettingsView" style="-fx-pref-width: 150; -fx-background-color: #34495e; -fx-text-fill: white; -fx-font-size: 14;"/>
            <Button text="📊 Dashboard Analytics" onAction="#showDashboardAnalyticsView" style="-fx-pref-width: 150; -fx-background-color: #34495e; -fx-text-fill: white; -fx-font-size: 14;"/>
            <Button text="📜 Audit Log" onAction="#showAuditLogView" style="-fx-pref-width: 150; -fx-background-color: #34495e; -fx-text-fill: white; -fx-font-size: 14;"/>
            <Button text="❗ Error Log" onAction="#showErrorLogView" style="-fx-pref-width: 150; -fx-background-color: #34495e; -fx-text-fill: white; -fx-font-size: 14;"/>
            <Button text="🔍 Customer Search" onAction="#showCustomerSearchView" style="-fx-pref-width: 150; -fx-background-color: #34495e; -fx-text-fill: white; -fx-font-size: 14;"/>
            <Button text="🔍 Vehicle Search" onAction="#showVehicleSearchView" style="-fx-pref-width: 150; -fx-background-color: #34495e; -fx-text-fill: white; -fx-font-size: 14;"/>
            <Button text="📅 Appointment History" onAction="#showAppointmentHistoryView" style="-fx-pref-width: 150; -fx-background-color: #34495e; -fx-text-fill: white; -fx-font-size: 14;"/>
            <Button text="💳 Payment History" onAction="#showPaymentHistoryView" style="-fx-pref-width: 150; -fx-background-color: #34495e; -fx-text-fill: white; -fx-font-size: 14;"/>
            <Button text="📊 Inventory Report" onAction="#showInventoryReportView" style="-fx-pref-width: 150; -fx-background-color: #34495e; -fx-text-fill: white; -fx-font-size: 14;"/>
            <Button text="👤 Profile" onAction="#showUserProfileView" style="-fx-pref-width: 150; -fx-background-color: #1abc9c; -fx-text-fill: white; -fx-font-size: 14;"/>
            <Button text="🚪 Logout" onAction="#logout" style="-fx-pref-width: 150; -fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-size: 14;"/>
        </VBox>
    </left>
    <center>
        <VBox spacing="10" style="-fx-padding: 20; -fx-background-color: #ecf0f1;">
            <Label text="👤 User Profile" style="-fx-font-size: 20; -fx-text-fill: #2c3e50;"/>
            <GridPane hgap="10" vgap="10">
                <Label text="User ID:" GridPane.rowIndex="0" GridPane.columnIndex="0" style="-fx-font-size: 14; -fx-text-fill: #2c3e50;"/>
                <TextField fx:id="userIdField" GridPane.rowIndex="0" GridPane.columnIndex="1" style="-fx-pref-width: 200;" editable="false"/>
                <Label text="Username:" GridPane.rowIndex="1" GridPane.columnIndex="0" style="-fx-font-size: 14; -fx-text-fill: #2c3e50;"/>
                <TextField fx:id="usernameField" GridPane.rowIndex="1" GridPane.columnIndex="1" style="-fx-pref-width: 200;" editable="false"/>
                <Label text="Role ID:" GridPane.rowIndex="2" GridPane.columnIndex="0" style="-fx-font-size: 14; -fx-text-fill: #2c3e50;"/>
                <TextField fx:id="roleIdField" GridPane.rowIndex="2" GridPane.columnIndex="1" style="-fx-pref-width: 200;" editable="false"/>
                <Label text="First Name:" GridPane.rowIndex="3" GridPane.columnIndex="0" style="-fx-font-size: 14; -fx-text-fill: #2c3e50;"/>
                <TextField fx:id="firstNameField" GridPane.rowIndex="3" GridPane.columnIndex="1" style="-fx-pref-width: 200;"/>
                <Label text="Last Name:" GridPane.rowIndex="4" GridPane.columnIndex="0" style="-fx-font-size: 14; -fx-text-fill: #2c3e50;"/>
                <TextField fx:id="lastNameField" GridPane.rowIndex="4" GridPane.columnIndex="1" style="-fx-pref-width: 200;"/>
                <Label text="Email:" GridPane.rowIndex="5" GridPane.columnIndex="0" style="-fx-font-size: 14; -fx-text-fill: #2c3e50;"/>
                <TextField fx:id="emailField" GridPane.rowIndex="5" GridPane.columnIndex="1" style="-fx-pref-width: 200;"/>
                <Label text="New Password:" GridPane.rowIndex="6" GridPane.columnIndex="0" style="-fx-font-size: 14; -fx-text-fill: #2c3e50;"/>
                <TextField fx:id="passwordField" GridPane.rowIndex="6" GridPane.columnIndex="1" style="-fx-pref-width: 200;" promptText="Leave blank to keep current password"/>
                <Label text="Status:" GridPane.rowIndex="7" GridPane.columnIndex="0" style="-fx-font-size: 14; -fx-text-fill: #2c3e50;"/>
                <Label fx:id="statusLabel" GridPane.rowIndex="7" GridPane.columnIndex="1" style="-fx-font-size: 14; -fx-text-fill: #2c3e50;"/>
            </GridPane>
            <Button text="💾 Update Profile" onAction="#updateProfile" style="-fx-background-color: #1abc9c; -fx-text-fill: white; -fx-font-size: 14;"/>
        </VBox>
    </center>
</BorderPane>