<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.oscars.vehiclemaintenancesystem.controller.PaymentController">
    <left>
        <VBox fx:id="sidebar" spacing="10" style="-fx-background-color: #2c3e50; -fx-padding: 10;" minWidth="200">
            <!-- Buttons will be added dynamically in the controller -->
        </VBox>
    </left>
    <center>
        <VBox spacing="10" style="-fx-padding: 20; -fx-background-color: #ecf0f1;">
            <Label text="ðŸ’³ Payment Processing" style="-fx-font-size: 20; -fx-text-fill: #2c3e50;"/>
            <HBox spacing="10" alignment="CENTER">
                <Label text="Appointment ID:" style="-fx-font-size: 14;"/>
                <TextField fx:id="appointmentIdField" promptText="Enter Appointment ID" style="-fx-pref-width: 200;"/>
                <Label text="Payment Method:" style="-fx-font-size: 14;"/>
                <TextField fx:id="paymentMethodField" promptText="e.g., Credit Card" style="-fx-pref-width: 200;"/>
                <Button text="Process Payment" onAction="#processPayment" style="-fx-background-color: #1abc9c; -fx-text-fill: white;"/>
<!--                <Button text="Delete Payment" onAction="#deletePayment" style="-fx-background-color: #e74c3c; -fx-text-fill: white;"/>-->
            </HBox>
            <TableView fx:id="paymentTable" style="-fx-pref-height: 400;">
                <columns>
                    <TableColumn text="Payment ID" fx:id="paymentIdColumn" style="-fx-alignment: CENTER;" prefWidth="100"/>
                    <TableColumn text="Appointment ID" fx:id="appointmentIdColumn" style="-fx-alignment: CENTER;" prefWidth="100"/>
                    <TableColumn text="Appointment Date" fx:id="appointmentDateColumn" style="-fx-alignment: CENTER;" prefWidth="120"/>
                    <TableColumn text="Vehicle ID" fx:id="vehicleIdColumn" style="-fx-alignment: CENTER;" prefWidth="100"/>
                    <TableColumn text="Customer ID" fx:id="customerIdColumn" style="-fx-alignment: CENTER;" prefWidth="100"/>
                    <TableColumn text="Amount" fx:id="amountColumn" style="-fx-alignment: CENTER;" prefWidth="100"/>
                    <TableColumn text="Payment Date" fx:id="paymentDateColumn" style="-fx-alignment: CENTER;" prefWidth="120"/>
                    <TableColumn text="Payment Method" fx:id="paymentMethodColumn" style="-fx-alignment: CENTER;" prefWidth="120"/>
                    <TableColumn text="Payment Status" fx:id="paymentStatusColumn" style="-fx-alignment: CENTER;" prefWidth="120"/>
                </columns>
            </TableView>
        </VBox>
    </center>
</BorderPane>