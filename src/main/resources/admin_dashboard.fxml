<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.oscars.vehiclemaintenancesystem.ui.AdminDashboardController"
            prefWidth="1200" prefHeight="800" styleClass="root">

    <!-- Top: Header -->
    <top>
        <VBox>
            <MenuBar prefHeight="26.0" prefWidth="1200.0">
                <menus>
                    <Menu mnemonicParsing="false" text="File">
                        <items>
                            <MenuItem mnemonicParsing="false" text="Close" onAction="#handleClose" />
                        </items>
                    </Menu>
                    <Menu mnemonicParsing="false" text="Help">
                        <items>
                            <MenuItem mnemonicParsing="false" text="About" onAction="#handleAbout" />
                        </items>
                    </Menu>
                </menus>
            </MenuBar>
            <HBox alignment="CENTER_LEFT" spacing="10" styleClass="header">
                <Label text="Admin Dashboard" styleClass="header-title"/>
                <HBox HBox.hgrow="ALWAYS"/>
                <Button fx:id="logoutButton" text="Logout" onAction="#handleLogout" styleClass="logout-button"/>
            </HBox>
        </VBox>
    </top>

    <!-- Left: Sidebar Menu -->
    <left>
        <VBox spacing="12" styleClass="sidebar" prefWidth="220">
            <Label text="Menu" styleClass="sidebar-title"/>
            <Button fx:id="userManagementButton" text="User Management" onAction="#navigateToUserManagement" styleClass="sidebar-button"/>
            <Button fx:id="inventoryButton" text="Inventory Management" onAction="#showInventory" styleClass="sidebar-button"/>
            <Button fx:id="paymentInvoiceButton" text="Payment and Invoice" onAction="#showPaymentInvoice" styleClass="sidebar-button"/>
            <Button fx:id="auditLogsButton" text="Audit Logs" onAction="#showAuditLogs" styleClass="sidebar-button"/>
            <Button fx:id="reportsButton" text="Reports" onAction="#showReports" styleClass="sidebar-button"/>
            <Button fx:id="modifyVariablesButton" text="Modify Variables" onAction="#showModifyVariables" styleClass="sidebar-button"/>
        </VBox>
    </left>

    <!-- Center: Main Content Area -->
    <center>
        <VBox fx:id="contentArea" spacing="20" alignment="CENTER" style="-fx-padding: 25;">
            <Label text="Welcome Admin" styleClass="content-title"/>
            <Label text="Greeting" styleClass="content-subtitle"/>

            <!-- Status Tiles in a 2x2 Grid -->
            <GridPane hgap="20" vgap="20" alignment="CENTER">
                <padding>
                    <Insets top="20" right="20" bottom="20" left="20"/>
                </padding>

                <!-- System Status -->
                <VBox alignment="CENTER" styleClass="summary-box" GridPane.columnIndex="0" GridPane.rowIndex="0">
                    <Label text="System Status" styleClass="summary-label"/>
                    <Label fx:id="systemStatusLabel" text="Active" styleClass="summary-value"/>
                </VBox>

                <!-- Database Status -->
                <VBox alignment="CENTER" styleClass="summary-box" GridPane.columnIndex="1" GridPane.rowIndex="0">
                    <Label text="Database Status" styleClass="summary-label"/>
                    <Label fx:id="databaseStatusLabel" text="Active" styleClass="summary-value"/>
                </VBox>

                <!-- Active Users -->
                <VBox alignment="CENTER" styleClass="summary-box" GridPane.columnIndex="0" GridPane.rowIndex="1">
                    <Label text="Active Users" styleClass="summary-label"/>
                    <Label fx:id="activeUsersLabel" text="0" styleClass="summary-value"/>
                </VBox>

                <!-- Active Services -->
                <VBox alignment="CENTER" styleClass="summary-box" GridPane.columnIndex="1" GridPane.rowIndex="1">
                    <Label text="Active Services" styleClass="summary-label"/>
                    <Label fx:id="activeServicesLabel" text="0" styleClass="summary-value"/>
                </VBox>
            </GridPane>
        </VBox>
    </center>
</BorderPane>